@using Newtonsoft.Json
@model List<MTech.Objects.ShoppingCart>

<div class="row">
    @foreach(MTech.Objects.ShoppingCart item in Model.Where(f=>f.Id == ViewBag.IdCompra))
    {
        <div class="col-sm-2">
            <label class="control-label">Fecha de compra</label>    
            <input class="form-control form-control-sm text-center" required value="@item.FechaCompra.ToShortDateString()" disabled />
        </div>
        <div class="col-sm-6">
            <label class="control-label">Nombre</label>    
            <input id="itemNombre" type="text" class="form-control form-control-sm" required />
        </div>
        <div class="col-sm-2">
            <label class="control-label">Cantidad</label>    
            <input id="itemCantidad" type="number" class="form-control form-control-sm text-right" required />
        </div>
        <div class="col-sm-2">
            <label class="control-label">Precio</label>    
            <input id="itemPrecio" type="number" class="form-control form-control-sm text-right" required />
        </div>
        <div class="col-sm-2">
            <label class="control-label"> </label>    
            <button class="btn btn-info btn-block" onclick="NuevoItem('@item.Id');">Agregar Item</button>
        </div>
        <div class="col-sm-3">
            <label class="control-label"> </label>    
            <button class="btn btn-primary btn-block" onclick="VerCompras();">Regresar a compras</button>
        </div>
    }
    <div id="divItems" class="col-12">
    </div>
    <input type="hidden" id="txtidCompra" value="@ViewBag.IdCompra" />
</div>
<script type="text/javascript">
    ShoppingCartList = @(Html.Raw(JsonConvert.SerializeObject(this.Model)));
</script>